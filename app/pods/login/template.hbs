<div class="d-flex align-items-center justify-content-center w-100 h-100">
  <div class="container">
    <div class="row justify-content-center">
      {{!-- <div class="col-md-8"> --}}
        <div class="card-group row">
          <div class="card p-10 col-md-10 ">
            <div class="card-body">
              <h1>Login with Username & Password</h1>
              <p class="text-muted">Sign In to your account</p>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <div class="input-group-text">
                    <FaIcon @icon="user" />
                  </div>
                </div>
                <Input class="form-control" type="text" placeholder="Your username" autocomplete="off"
                  @value={{username}} disabled={{if-equals this.state "password-input" }} />
              </div>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <div class="input-group-text">
                    <FaIcon @icon="lock" />
                  </div>
                </div>
                <Input class="form-control" type="password" placeholder="Your password" autocomplete="off"
                  @value={{password}} />
              </div>
              <button type="button" class="btn btn-primary px-4" {{action (perform login)}}>
                {{if login.isRunning "Logging In" "Login"}}
              </button>
              {{#if login.last.isError}}
              <div class="red">
                <br>
                Invalid Username or Password
              </div>
              {{/if}}

            </div>
          </div>
        {{!-- </div> --}}
      </div>
    </div>
  </div>
</div>